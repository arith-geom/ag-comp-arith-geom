<header class="header-main">
  <a class="brand" href="{{ site.baseurl }}/">
    <div class="brand-title">{{ site.title }}</div>
    <div class="university-name">{{ site.university }}</div>
  </a>
  <nav class="main-nav-desktop">
    <ul>
      {% for item in site.data.navigation %}
        <li>
          <a href="{{ item.url | relative_url }}">
            <i class="{{ item.icon }}" aria-hidden="true"></i>
            <span>{{ item.title }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
  <button class="nav-toggle" aria-label="Toggle navigation">
    <span class="nav-toggle-icon"></span>
  </button>
</header>

<div class="sidebar-nav">
  <button class="sidebar-close" aria-label="Close navigation">&times;</button>
  <ul>
    {% for item in site.data.navigation %}
      <li>
        <a href="{{ item.url | relative_url }}">
          <i class="{{ item.icon }}" aria-hidden="true"></i>
          <span>{{ item.title }}</span>
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
<div class="sidebar-overlay"></div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navToggle = document.querySelector('.nav-toggle');
    const sidebarNav = document.querySelector('.sidebar-nav');
    const sidebarOverlay = document.querySelector('.sidebar-overlay');
    const sidebarClose = document.querySelector('.sidebar-close');

    function openSidebar() {
      sidebarNav.classList.add('is-open');
      sidebarOverlay.classList.add('is-active');
    }

    function closeSidebar() {
      sidebarNav.classList.remove('is-open');
      sidebarOverlay.classList.remove('is-active');
    }

    if (navToggle) {
      navToggle.addEventListener('click', openSidebar);
    }
    if (sidebarOverlay) {
      sidebarOverlay.addEventListener('click', closeSidebar);
    }
    if (sidebarClose) {
      sidebarClose.addEventListener('click', closeSidebar);
    }
  });
</script>