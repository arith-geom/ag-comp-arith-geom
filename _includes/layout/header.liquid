<script>
document.addEventListener('DOMContentLoaded', function() {
  // Enhanced theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  const themeIconLight = document.getElementById('theme-icon-light');
  const themeIconDark = document.getElementById('theme-icon-dark');
  
  if (themeToggle && themeIconLight && themeIconDark) {
    // Update icon based on current theme
    function updateThemeIcon(theme) {
      // Remove any inline styles that might interfere with CSS
      if (themeIconLight) themeIconLight.style.display = '';
      if (themeIconDark) themeIconDark.style.display = '';

      // Use CSS classes to control which icon is shown
      if (theme === 'dark') {
        themeToggle.classList.remove('light-mode');
        themeToggle.classList.add('dark-mode');
        themeToggle.setAttribute('aria-label', 'Switch to light mode');
        themeToggle.setAttribute('title', 'Switch to light mode');
      } else {
        themeToggle.classList.remove('dark-mode');
        themeToggle.classList.add('light-mode');
        themeToggle.setAttribute('aria-label', 'Switch to dark mode');
        themeToggle.setAttribute('title', 'Switch to dark mode');
      }
    }
    
    // Initialize icon based on current theme
    const currentTheme = localStorage.getItem('theme') ||
                        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    updateThemeIcon(currentTheme);

    // Ensure theme toggle has proper initial class
    if (currentTheme === 'dark') {
      themeToggle.classList.add('dark-mode');
      themeToggle.classList.remove('light-mode');
    } else {
      themeToggle.classList.add('light-mode');
      themeToggle.classList.remove('dark-mode');
    }
    
    // Listen for theme changes
    document.addEventListener('themeChanged', function(e) {
      updateThemeIcon(e.detail.theme);
    });
  }
  
  // Custom Sidebar Navigation Functionality
  const sidebarToggle = document.getElementById('sidebarToggle');
  const sidebarNav = document.getElementById('sidebarNav');
  const sidebarOverlay = document.getElementById('sidebarOverlay');
  const sidebarClose = document.getElementById('sidebarClose');

  function openSidebar() {
    sidebarNav.classList.add('open');
    sidebarToggle.setAttribute('aria-expanded', 'true');
    document.body.style.overflow = 'hidden'; // Prevent background scrolling

    // Focus management for accessibility
    setTimeout(() => {
      sidebarClose.focus();
    }, 100);

    // Announce for screen readers
    announceToScreenReader('Navigation menu opened');
  }

  function closeSidebar() {
    sidebarNav.classList.remove('open');
    sidebarToggle.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = ''; // Restore scrolling

    // Return focus to toggle button
    sidebarToggle.focus();

    // Announce for screen readers
    announceToScreenReader('Navigation menu closed');
  }

  function announceToScreenReader(message) {
    const announcement = document.createElement('div');
    announcement.setAttribute('aria-live', 'polite');
    announcement.className = 'sr-only';
    announcement.textContent = message;
    document.body.appendChild(announcement);

    setTimeout(() => {
      if (document.body.contains(announcement)) {
        document.body.removeChild(announcement);
      }
    }, 1000);
  }

  // Event listeners for sidebar
  if (sidebarToggle) {
    sidebarToggle.addEventListener('click', openSidebar);
  }

  if (sidebarClose) {
    sidebarClose.addEventListener('click', closeSidebar);
  }

  if (sidebarOverlay) {
    sidebarOverlay.addEventListener('click', closeSidebar);
  }

  // Close sidebar when clicking on nav links (both desktop and mobile)
  const desktopNavLinks = document.querySelectorAll('.navbar-nav .nav-link');
  const sidebarLinks = document.querySelectorAll('.sidebar-menu-link');

  desktopNavLinks.forEach(link => {
    link.addEventListener('click', function() {
      if (window.innerWidth < 700 && sidebarNav.classList.contains('open')) {
        closeSidebar();
      }
    });
  });

  sidebarLinks.forEach(link => {
    link.addEventListener('click', closeSidebar);
  });

  // Keyboard navigation enhancements
  document.addEventListener('keydown', function(e) {
    // ESC to close sidebar
    if (e.key === 'Escape' && sidebarNav.classList.contains('open')) {
      closeSidebar();
    }
  });

  // Close sidebar when clicking outside (for desktop)
  document.addEventListener('click', function(e) {
    if (sidebarNav.classList.contains('open') &&
        !sidebarNav.contains(e.target) &&
        !sidebarToggle.contains(e.target)) {
      closeSidebar();
    }
  });

  // Progressive responsive navbar functionality - simplified to avoid conflicts
  function updateNavbarForScreenSize() {
    const width = window.innerWidth;
    const sidebarNav = document.getElementById('sidebarNav');

    // Set fixed height to prevent viewport-based resizing
    if (sidebarNav && !sidebarNav.style.height) {
      const fixedHeight = window.innerHeight + 'px';
      sidebarNav.style.height = fixedHeight;
      sidebarNav.style.maxHeight = fixedHeight;

      // Also fix the sidebar content height
      const sidebarContent = sidebarNav.querySelector('.sidebar-content');
      if (sidebarContent) {
        sidebarContent.style.height = fixedHeight;
        sidebarContent.style.maxHeight = fixedHeight;
      }

      // Fix sidebar overlay height
      const sidebarOverlay = sidebarNav.querySelector('.sidebar-overlay');
      if (sidebarOverlay) {
        sidebarOverlay.style.height = fixedHeight;
        sidebarOverlay.style.maxHeight = fixedHeight;
      }

      // Fix sidebar menu height (content area minus header)
      const sidebarMenu = sidebarNav.querySelector('.sidebar-menu');
      if (sidebarMenu) {
        const headerHeight = 80; // Approximate header height
        const menuHeight = (window.innerHeight - headerHeight) + 'px';
        sidebarMenu.style.maxHeight = menuHeight;
      }
    }

    // Only handle sidebar visibility based on screen size
    if (sidebarNav) {
      if (width <= 799.98) {
        // Small screens: ensure sidebar is available but hidden by default
        sidebarNav.style.display = 'flex';
        if (!sidebarNav.classList.contains('open')) {
          sidebarNav.style.transform = 'translateX(-100%)';
        }
      } else {
        // Large/medium screens: completely hide sidebar
        sidebarNav.style.display = 'none';
        sidebarNav.style.transform = 'translateX(-100%)';
      }
    }

    // Let CSS media queries handle everything else
    // No need to override CSS with inline styles
  }

  // Update navbar on page load (set fixed height once)
  updateNavbarForScreenSize();

  // On resize, only handle visibility, not height (height stays fixed)
  window.addEventListener('resize', function() {
    const width = window.innerWidth;
    const sidebarNav = document.getElementById('sidebarNav');

    if (sidebarNav) {
      if (width <= 799.98) {
        // Small screens: ensure sidebar is available but hidden by default
        sidebarNav.style.display = 'flex';
        if (!sidebarNav.classList.contains('open')) {
          sidebarNav.style.transform = 'translateX(-100%)';
        }
      } else {
        // Large/medium screens: completely hide sidebar
        sidebarNav.style.display = 'none';
        sidebarNav.style.transform = 'translateX(-100%)';
      }
    }
  });


});
