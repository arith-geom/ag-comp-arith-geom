<footer class="footer mt-auto py-4">
  <div class="container-fluid px-3 px-md-4">
    <!-- Main Footer Content -->
    <div class="row g-4">
      <!-- Organization Info & Contact -->
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="footer-section">
          {% if site.title %}
          <h5 class="footer-heading mb-3">
            <i class="fas fa-university me-2" aria-hidden="true"></i>
            {{ site.title }}
          </h5>
          {% endif %}
          
          {% if site.description %}
          <p class="footer-description mb-3">
            {{ site.description }}
          </p>
          {% endif %}

          <div class="contact-details">
            {% if site.contact.address %}
            <div class="contact-item mb-2">
              <i class="fas fa-map-marker-alt me-2 contact-icon" aria-hidden="true"></i>
              <span>{{ site.contact.address | replace: ", ", "<br>" }}</span>
            </div>
            {% endif %}
            {% if site.contact.phone %}
            <div class="contact-item mb-2">
              <i class="fas fa-phone me-2 contact-icon" aria-hidden="true"></i>
              <span>{{ site.contact.phone }}</span>
            </div>
            {% endif %}
            {% if site.contact.fax %}
            <div class="contact-item mb-2">
              <i class="fas fa-fax me-2 contact-icon" aria-hidden="true"></i>
              <span>{{ site.contact.fax }}</span>
            </div>
            {% endif %}
            {% if site.contact.email %}
            <div class="contact-item mb-2">
              <i class="fas fa-envelope me-2 contact-icon" aria-hidden="true"></i>
              <a href="mailto:{{ site.contact.email }}" class="footer-link">{{ site.contact.email }}</a>
            </div>
            {% endif %}
          </div>
        </div>
      </div>

      <!-- Research & Academic Links -->
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="footer-section">
          <h5 class="footer-heading mb-3">Research &amp; Academics</h5>
          <ul class="footer-links list-unstyled">
            {% for item in site.data.navigation %}
              {% if item.title == 'Home' or item.title == 'News' %}{% continue %}{% endif %}
              <li class="mb-2">
                <a href="{{ item.url | relative_url }}" class="footer-link">
                  {% if item.icon %}<i class="{{ item.icon }} me-2" aria-hidden="true"></i>{% endif %}{{ item.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
          
          <h5 class="footer-heading mb-3 mt-4">University Links</h5>
          <div class="row">
            <div class="col-6">
              <ul class="footer-links list-unstyled">
                <li class="mb-2">
                  <a href="https://www.iwr.uni-heidelberg.de" target="_blank" rel="noopener" class="footer-link">
                    <i class="fas fa-building me-2" aria-hidden="true"></i>IWR
                  </a>
                </li>
              </ul>
            </div>
            <div class="col-6">
              <ul class="footer-links list-unstyled">
                <li class="mb-2">
                  <a href="https://www.uni-heidelberg.de" target="_blank" rel="noopener" class="footer-link">
                    <i class="fas fa-graduation-cap me-2" aria-hidden="true"></i>University
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- IWR Logo Section -->
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="footer-section text-center">
          <!-- IWR Group Logo -->
          <div class="footer-logo-container">
            <a href="https://www.iwr.uni-heidelberg.de" target="_blank" rel="noopener" class="footer-logo-link">
              <picture class="footer-logo">
                <source srcset="{{ '/assets/img/group_logo.webp' | relative_url }}" type="image/webp">
                <img src="{{ '/assets/img/group_logo_optimized.png' | relative_url }}" alt="IWR - Interdisciplinary Center for Scientific Computing Logo" class="footer-logo-img" loading="lazy" decoding="async">
              </picture>
            </a>
          </div>
          
          <h5 class="footer-heading mb-3 mt-3">
            <i class="fas fa-building me-2" aria-hidden="true"></i>
            Interdisciplinary Center for Scientific Computing
          </h5>
          
          <p class="footer-description">
            Part of the Interdisciplinary Center for Scientific Computing (IWR) at Heidelberg University
          </p>
        </div>
      </div>
    </div>

    <!-- Footer Bottom Section -->
    <hr class="footer-divider my-2">

    <div class="footer-bottom">
      <div class="row align-items-center">
        <div class="col-lg-4 col-md-6 mb-2 mb-md-0">
          <div class="copyright-info">
            <p class="mb-1">
              &copy; {{ "now" | date: "%Y" }} {{ site.university }}.
              <span class="d-block d-sm-inline">All rights reserved.</span>
            </p>
            <p class="last-updated mb-0">
              <small>Last updated: {{ site.time | date: "%B %d, %Y" }}</small>
            </p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 text-md-center mb-2 mb-md-0">
          <div class="legal-links-footer">
            <div class="d-flex flex-wrap justify-content-center gap-3">
              <a href="https://www.uni-heidelberg.de/de/impressum" target="_blank" rel="noopener" class="legal-link">Impressum</a>
              <span class="separator">|</span>
              <a href="https://www.uni-heidelberg.de/de/datenschutzerklaerung" target="_blank" rel="noopener" class="legal-link">Legal Notice</a>
            </div>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 text-md-end">
          <div class="website-credits">
            <p class="mb-0">
              Website by
              <a href="{{ site.creator.github_url }}" target="_blank" rel="noopener" class="creator-link">
                {{ site.creator.name }}
              </a>
              <span class="creator-role">{{ site.creator.role }}</span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Back to Top Button -->
  <button id="back-to-top" class="back-to-top-btn" aria-label="Back to top">
    <i class="fas fa-arrow-up" aria-hidden="true"></i>
  </button>
</footer>

<script src="{{ '/assets/js/footer.js' | relative_url }}"></script>