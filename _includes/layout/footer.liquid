<!-- _includes/layout/footer.liquid -->
<footer class="footer">
  <div class="container">
    <div class="row gy-4">

      <!-- 1. Logo and University Info -->
      <div class="col-lg-4 col-md-12 text-center text-lg-start">
        <div class="footer-logo-section">
          <a href="https://www.uni-heidelberg.de" target="_blank" rel="noopener">
            <img src="{{ '/assets/img/IWR_Uni_Logo_2017-1-1.png' | relative_url }}" alt="IWR Logo" class="footer-logo-img">
          </a>
        </div>
        <p class="mt-3" style="font-size: 0.8rem;">
          Part of the <a href="https://www.iwr.uni-heidelberg.de" target="_blank" rel="noopener">Interdisciplinary Center for Scientific Computing (IWR)</a>
        </p>
      </div>

      <!-- 2. Contact Information -->
      <div class="col-lg-4 col-md-6">
        <h5 class="footer-heading">Contact Us</h5>
        <div class="contact-details d-flex flex-column gap-2">
          {% if site.contact.address %}
          <div class="contact-item">
            <i class="fas fa-map-marker-alt fa-fw contact-icon" aria-hidden="true"></i>
            <span>{{ site.contact.address | replace: ", ", "<br>" }}</span>
          </div>
          {% endif %}
          {% if site.contact.phone %}
          <div class="contact-item">
            <i class="fas fa-phone fa-fw contact-icon" aria-hidden="true"></i>
            <span>{{ site.contact.phone }}</span>
          </div>
          {% endif %}
          {% if site.contact.fax %}
          <div class="contact-item">
            <i class="fas fa-fax fa-fw contact-icon" aria-hidden="true"></i>
            <span>{{ site.contact.fax }}</span>
          </div>
          {% endif %}
          {% if site.contact.email %}
          <div class="contact-item">
            <i class="fas fa-envelope fa-fw contact-icon" aria-hidden="true"></i>
            <a href="mailto:{{ site.contact.email }}" class="footer-link">{{ site.contact.email }}</a>
          </div>
          {% endif %}
        </div>
      </div>

      <!-- 3. Quick Links -->
      <div class="col-lg-4 col-md-6">
        <h5 class="footer-heading">Quick Links</h5>
        <ul class="list-unstyled d-flex flex-column gap-2">
          {% for item in site.data.navigation %}
            {% if item.title == 'Home' or item.title == 'Contact' %}{% continue %}{% endif %}
            <li>
              <a href="{{ item.url | relative_url }}" class="footer-link">
                {% if item.icon %}<i class="{{ item.icon }} fa-fw me-2" aria-hidden="true"></i>{% endif %}{{ item.title }}
              </a>
            </li>
          {% endfor %}
           <li>
            <a href="https://www.uni-heidelberg.de/de/impressum" target="_blank" rel="noopener" class="footer-link">
              <i class="fas fa-gavel fa-fw me-2"></i>Impressum
            </a>
          </li>
          <li>
            <a href="https://www.uni-heidelberg.de/de/datenschutzerklaerung" target="_blank" rel="noopener" class="footer-link">
              <i class="fas fa-shield-alt fa-fw me-2"></i>Data Privacy
            </a>
          </li>
        </ul>
      </div>

    </div>

    <!-- Bottom Bar -->
    <hr class="footer-divider mt-4 mb-3">
    <div class="footer-bottom text-center text-md-start">
      <div class="row align-items-center">
        <div class="col-md-4">
          <p class="mb-0">&copy; {{ "now" | date: "%Y" }} {{ site.title }}.</p>
        </div>
        <div class="col-md-4 text-md-center">
          <div class="website-credits">
            <p class="mb-0">
              Website by
              <a href="{{ site.creator.github_url }}" target="_blank" rel="noopener" class="footer-link">
                {{ site.creator.name }}
              </a>
            </p>
          </div>
        </div>
        <div class="col-md-4 text-md-end">
           <p class="mb-0">Last updated: {{ site.time | date: "%B %d, %Y" }}</p>
        </div>
      </div>
    </div>

  </div>
</footer>

<!-- Back to Top button -->
<button id="back-to-top" class="back-to-top-btn" aria-label="Back to top">
  <i class="fas fa-arrow-up"></i>
</button>

<script src="{{ '/assets/js/footer.js' | relative_url }}"></script>
