<!-- Debug Floating Button -->
<div id="debug-btn" class="debug-btn">
  <button type="button" class="btn btn-primary rounded-circle">
    <i class="fas fa-bug"></i>
  </button>
</div>

<!-- Debug Modal -->
<div id="debug-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="debugModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="debugModalLabel">Debug Information</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="nav nav-tabs" id="debug-tabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="elements-tab" data-bs-toggle="tab" data-bs-target="#elements" type="button" role="tab" aria-controls="elements" aria-selected="true">Interactive Elements</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="false">Settings</button>
          </li>
        </ul>
        <div class="tab-content" id="debug-tabs-content">
          <div class="tab-pane fade show active" id="elements" role="tabpanel" aria-labelledby="elements-tab">
            <div id="interactive-elements-list" class="list-group">
              <!-- Dynamically populated -->
            </div>
          </div>
          <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">
            <div id="debug-settings">
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="outline-toggle-switch">
                <label class="form-check-label" for="outline-toggle-switch">Outline Layout Elements</label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>