---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

{% if page.show_title and page.permalink != '/teaching/' %}
<div class="page-hero">
  <div class="page-hero-overlay">
    <div class="page-hero-content">
      <h1 class="page-title">{{ page.title | default: page.name }}</h1>
      {% if page.description %}
        <p class="page-subtitle">{{ page.description }}</p>
      {% endif %}
    </div>
  </div>
</div>
{% endif %}

<article class="page-article tex2jax_process">
  {{ content }}
</article>

{% if page.related_publications %}
  <h2>References</h2>
  <div class="publications">
    {% bibliography --cited_in_order %}
  </div>
{% endif %}

{% if site.giscus and page.giscus_comments %}
  {% include giscus.liquid %}
{% endif %}
