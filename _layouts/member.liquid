---
layout: page
---
{% assign page_title = page.name %}
<script>
// Redirect to main members page with member parameter
window.location.href = '/members/?member={{ page.name | slugify | append: '-' | append: page.role | slugify }}';
</script>
<div class="member-profile" style="display: none;">
  <div class="member-header" style="background: linear-gradient(135deg, var(--primary) 0%, var(--heidelberg-red) 100%); border-radius: 0.75rem; border: 1px solid var(--border-color); color: var(--primary-text);">
    <div class="member-photo-container">
      {% if page.photo %}
        <img src="{{ page.photo | relative_url }}" alt="Photo of {{ page.name }}" class="member-photo">
      {% else %}
        <img src="{{ '/assets/images/heidelberg_placeholder.jpg' | relative_url }}" alt="Placeholder photo for {{ page.name }}" class="member-photo">
      {% endif %}
    </div>
    <div class="member-info">
      <h1 class="member-name">{{ page.name }}</h1>
      {% if page.role %}
        <p class="member-role">{{ page.role }}</p>
      {% endif %}
      {% if page.email %}
        <div class="member-contact">
          <p class="member-email">{{ page.email }}</p>
        </div>
      {% endif %}
      <div class="member-links">
        {% if page.website %}
          <a href="{{ page.website }}" target="_blank" rel="noopener noreferrer" class="member-link" aria-label="Personal Website of {{ page.name }}">
            <i class="fas fa-globe" aria-hidden="true"></i>
            <span>Website</span>
          </a>
        {% endif %}
        {% if page.github %}
          <a href="https://github.com/{{ page.github }}" target="_blank" rel="noopener noreferrer" class="member-link" aria-label="GitHub Profile of {{ page.name }}">
            <i class="fab fa-github" aria-hidden="true"></i>
            <span>GitHub</span>
          </a>
        {% endif %}
        {% if page.orcid %}
          <a href="https://orcid.org/{{ page.orcid }}" target="_blank" rel="noopener noreferrer" class="member-link" aria-label="ORCID Profile of {{ page.name }}">
            <i class="ai ai-orcid" aria-hidden="true"></i>
            <span>ORCID</span>
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Related Content Links -->
  <div class="member-related-content">
    {% assign member_name = page.name %}
    {% assign member_slug = page.name | downcase | replace: 'ö', 'oe' | replace: 'ä', 'ae' | replace: 'ü', 'ue' | replace: 'ß', 'ss' | replace: ' ', '-' | replace: '.', '' | replace: ',', '' %}
    
    <!-- Publications -->
    {% assign member_publications = site.publications | where_exp: "pub", "pub.authors contains member_name" %}
    {% if member_publications.size > 0 %}
      <div class="related-content-section">
        <h3 class="related-content-title">
          <i class="fas fa-book" aria-hidden="true"></i>
          Publications ({{ member_publications.size }})
        </h3>
        <div class="related-content-links">
          <a href="{{ '/publications/' | relative_url }}?author={{ member_name | url_encode }}" class="related-content-link">
            <i class="fas fa-list" aria-hidden="true"></i>
            View All Publications
          </a>
        </div>
      </div>
    {% endif %}

    <!-- Teaching -->
    {% assign member_teaching = site.teaching | where_exp: "course", "course.instructor contains member_name" %}
    {% if member_teaching.size > 0 %}
      <div class="related-content-section">
        <h3 class="related-content-title">
          <i class="fas fa-chalkboard-teacher" aria-hidden="true"></i>
          Teaching ({{ member_teaching.size }} courses)
        </h3>
        <div class="related-content-links">
          <a href="{{ '/teaching/' | relative_url }}#{{ member_slug }}" class="related-content-link">
            <i class="fas fa-list" aria-hidden="true"></i>
            View Teaching Courses
          </a>
        </div>
      </div>
    {% endif %}

    <!-- Research Projects -->
    {% assign member_research = site.research | where_exp: "project", "project.members contains member_name" %}
    {% if member_research.size > 0 %}
      <div class="related-content-section">
        <h3 class="related-content-title">
          <i class="fas fa-microscope" aria-hidden="true"></i>
          Research Projects ({{ member_research.size }})
        </h3>
        <div class="related-content-links">
          <a href="{{ '/research/' | relative_url }}#{{ member_slug }}" class="related-content-link">
            <i class="fas fa-list" aria-hidden="true"></i>
            View Research Projects
          </a>
        </div>
      </div>
    {% endif %}

    <!-- External Links -->
    {% if page.website or page.github or page.orcid %}
      <div class="related-content-section">
        <h3 class="related-content-title">
          <i class="fas fa-external-link-alt" aria-hidden="true"></i>
          External Links
        </h3>
        <div class="related-content-links">
          {% if page.website %}
            <a href="{{ page.website }}" target="_blank" rel="noopener noreferrer" class="related-content-link">
              <i class="fas fa-globe" aria-hidden="true"></i>
              Personal Website
            </a>
          {% endif %}
          {% if page.github %}
            <a href="https://github.com/{{ page.github }}" target="_blank" rel="noopener noreferrer" class="related-content-link">
              <i class="fab fa-github" aria-hidden="true"></i>
              GitHub Profile
            </a>
          {% endif %}
          {% if page.orcid %}
            <a href="https://orcid.org/{{ page.orcid }}" target="_blank" rel="noopener noreferrer" class="related-content-link">
              <i class="ai ai-orcid" aria-hidden="true"></i>
              ORCID Profile
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>

  <div class="member-content">
    {% if page.research_interests %}
      <div class="member-section">
        <h2 class="member-section-title">Research Interests</h2>
        <div class="member-section-content tex2jax_process">
          {{ page.research_interests | markdownify }}
        </div>
      </div>
    {% endif %}

    <div class="member-section">
      <h2 class="member-section-title">About</h2>
      <div class="member-section-content tex2jax_process">
        {{ content }}
      </div>
    </div>

    <!-- Publications Section -->
    {% assign member_publications = site.publications | where_exp: "pub", "pub.authors contains member_name" | sort: 'year' | reverse %}
    {% if member_publications.size > 0 %}
      <div class="member-section">
        <h2 class="member-section-title">
          <i class="fas fa-book" aria-hidden="true"></i>
          Publications ({{ member_publications.size }})
        </h2>
        <div class="member-publications tex2jax_process">
          {% for publication in member_publications %}
            <div class="publication-item">
              <div class="publication-header">
                <div class="publication-meta">
                  <span class="publication-type">{{ publication.type }}</span>
                  <span class="publication-year">{{ publication.year }}</span>
                </div>
                <h3 class="publication-title">
                  {% if publication.pdf %}
                    <a href="{% if publication.pdf contains '://' %}{{ publication.pdf }}{% else %}{{ publication.pdf | relative_url }}{% endif %}" target="_blank" rel="noopener noreferrer">{{ publication.title }}</a>
                  {% elsif publication.url %}
                    <a href="{{ publication.url }}" target="_blank" rel="noopener noreferrer">{{ publication.title }}</a>
                  {% elsif publication.doi %}
                    <a href="https://doi.org/{{ publication.doi }}" target="_blank" rel="noopener noreferrer">{{ publication.title }}</a>
                  {% else %}
                    {{ publication.title }}
                  {% endif %}
                </h3>
              </div>
              <div class="publication-authors">{{ publication.authors }}</div>
              {% if publication.journal %}
                <div class="publication-venue">
                  {% if publication.journal_full %}{{ publication.journal_full }}{% else %}{{ publication.journal }}{% endif %}
                  {% if publication.volume %}, Volume {{ publication.volume }}{% endif %}
                  {% if publication.pages %}, {{ publication.pages }}{% endif %}
                  {% if publication.year %}, {{ publication.year }}{% endif %}
                </div>
              {% endif %}
              {% if publication.abstract %}
                <div class="publication-abstract">
                  {{ publication.abstract | truncate: 200 }}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Teaching Section -->
    {% assign member_teaching = site.teaching | where_exp: "course", "course.instructor contains member_name" | sort: 'semester' | reverse %}
    {% if member_teaching.size > 0 %}
      <div class="member-section">
        <h2 class="member-section-title">
          <i class="fas fa-chalkboard-teacher" aria-hidden="true"></i>
          Teaching ({{ member_teaching.size }} courses)
        </h2>
        <div class="member-teaching tex2jax_process">
          {% for course in member_teaching %}
            <div class="teaching-item">
              <div class="teaching-header">
                <h3 class="teaching-title">{{ course.title }}</h3>
                <div class="teaching-meta">
                  <span class="teaching-type">{{ course.course_type }}</span>
                  <span class="teaching-semester">{{ course.semester_key }}</span>
                </div>
              </div>
              <div class="teaching-description">{{ course.description }}</div>
              {% if course.language %}
                <div class="teaching-language">Language: {{ course.language }}</div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Research Projects Section -->
    {% assign member_research = site.research | where_exp: "project", "project.members contains member_name" %}
    {% if member_research.size > 0 %}
      <div class="member-section">
        <h2 class="member-section-title">
          <i class="fas fa-microscope" aria-hidden="true"></i>
          Research Projects ({{ member_research.size }})
        </h2>
        <div class="member-research tex2jax_process">
          {% for project in member_research %}
            <div class="research-item">
              <div class="research-header">
                <h3 class="research-title">{{ project.title }}</h3>
                {% if project.status %}
                  <span class="research-status">{{ project.status }}</span>
                {% endif %}
              </div>
              <div class="research-description">{{ project.description }}</div>
              {% if project.members %}
                <div class="research-members">
                  <strong>Team:</strong> {{ project.members }}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
